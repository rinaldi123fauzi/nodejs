<!DOCTYPE html>
<html lang="en">
    <%- include('./partials/head.ejs')%>
<body>
    <% const name = 'mario'%>
    <%- include('./partials/nav.ejs')%>

    <div class="blogs content">
        <%= name %>
        <h2>All Blogs</h2>
        <% if(blogs.length > 0) { %>
            <% blogs.forEach(blog => { %>
                <h3 class="title"><%= blog.title %></h3>
                <p class="snippet"><%= blog.snippet %></p>
            <% })%>
        <% } else { %>
            <h3>Data not exists</h3>
        <% } %>
    </div>
    <%- include('./partials/footer.ejs')%>
</body>
</html>